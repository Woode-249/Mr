<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MERAC Investment Plans</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    :root {
      --blue-dark: rgba(15, 25, 50, 0.9);
      --purple-dark: rgba(40, 20, 60, 0.9);
      --glass: rgba(255, 255, 255, 0.05);
    }

    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(145deg, #0f172a, #1e293b);
      color: #fff;
      overflow-x: hidden;
    }

    .container {
      padding: 2rem;
      max-width: 1200px;
      margin: auto;
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin: 2rem 0 1rem;
      border-left: 5px solid #38bdf8;
      padding-left: 1rem;
    }

    .plans-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .card {
      position: relative;
      background: var(--glass);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      border: 1px solid rgba(255,255,255,0.1);
      padding: 1.5rem;
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      box-shadow: 0 0 20px #3b82f6;
      background: rgba(255, 255, 255, 0.08);
    }

    .little {
      background: var(--blue-dark);
    }

    .huge {
      background: var(--purple-dark);
    }

    .plan-title {
      font-size: 1.2rem;
      font-weight: bold;
    }

    .plan-detail {
      margin: 0.4rem 0;
      font-size: 0.95rem;
    }

    .invest-btn {
      margin-top: 1rem;
      display: block;
      width: 100%;
      background: #38bdf8;
      color: #000;
      padding: 0.75rem;
      font-weight: bold;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .invest-btn:hover {
      background: #0ea5e9;
    }

    .budget-input {
      width: 100%;
      margin-top: 1rem;
      padding: 0.75rem;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.2);
      border-radius: 12px;
      backdrop-filter: blur(10px);
      color: #fff;
      font-size: 1rem;
    }

    .show-btn {
      width: 100%;
      margin-top: 1rem;
      padding: 0.75rem;
      background: #4f46e5;
      color: #fff;
      border: none;
      border-radius: 12px;
      font-weight: bold;
      cursor: pointer;
    }

    #chart-container {
      margin: 3rem 0;
      background: rgba(255,255,255,0.05);
      padding: 1rem;
      border-radius: 20px;
      backdrop-filter: blur(10px);
    }

    .floating-nav {
      position: fixed;
      bottom: 20px;
      left: 20px;
      z-index: 999;
    }

    .nav-btn {
      background: rgba(255,255,255,0.07);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.15);
      color: #fff;
      padding: 0.75rem 1.2rem;
      border-radius: 50px;
      font-weight: bold;
      margin-bottom: 0.5rem;
      display: block;
      text-align: center;
      text-decoration: none;
      transition: background 0.2s ease;
    }

    .nav-btn:hover {
      background: #3b82f6;
    }
  </style>
</head>
<body>
  <div class="container">
    <input type="text" class="budget-input" placeholder="Enter your Budget" />
    <button class="show-btn">Show Plans</button>

    <div id="chart-container">
      <canvas id="profitChart" height="100"></canvas>
    </div>

    <h2 class="section-title" id="little">Little Plans</h2>
    <div class="plans-grid" id="little-plans"></div>

    <h2 class="section-title" id="huge">Huge Plans</h2>
    <div class="plans-grid" id="huge-plans"></div>
  </div>

  <div class="floating-nav">
    <a href="#little" class="nav-btn">Little Plans</a>
    <a href="#huge" class="nav-btn">Huge Plans</a>
    <a href="#top" class="nav-btn">Top</a>
  </div>

  <script>
    const littlePlans = [
      {name: 'VIP_1', investment: 5, daily: 1, investors: 84392},
      {name: 'VIP_2', investment: 10, daily: 2.5, investors: 97321},
      {name: 'VIP_3', investment: 25, daily: 4, investors: 88901},
      {name: 'VIP_4', investment: 50, daily: 8, investors: 70412},
      {name: 'VIP_5', investment: 65, daily: 10, investors: 95830},
      {name: 'VIP_6', investment: 85, daily: 15, investors: 99910},
    ];

    const hugePlans = [
      {name: 'VIP_7', investment: 100, daily: 25, investors: 41200},
      {name: 'VIP_8', investment: 150, daily: 35, investors: 37890},
      {name: 'VIP_9', investment: 300, daily: 60, investors: 46221},
      {name: 'VIP_10', investment: 500, daily: 85, investors: 52789},
      {name: 'VIP_11', investment: 1000, daily: 100, investors: 30111},
      {name: 'VIP_Bronze', investment: 2000, daily: 200, investors: 33331},
      {name: 'VIP_Silver', investment: 4000, daily: 400, investors: 44332},
      {name: 'VIP_Golden', investment: 8000, daily: 700, investors: 51323},
      {name: 'VIP_Diamond', investment: 10000, daily: 1000, investors: 39290}
    ];

    function renderPlans(plans, containerId, cssClass) {
      const container = document.getElementById(containerId);
      container.innerHTML = '';
      plans.forEach(plan => {
        container.innerHTML += `
          <div class="card ${cssClass}">
            <div class="plan-title">${plan.name}</div>
            <div class="plan-detail">Investment: $${plan.investment}</div>
            <div class="plan-detail">Daily Profit: $${plan.daily}</div>
            <div class="plan-detail">Duration: Lifetime</div>
            <div class="plan-detail">Investors: ${plan.investors}</div>
            <button class="invest-btn" onclick="window.location.href='/payment?plan=${encodeURIComponent(plan.name)}'">Invest</button>
          </div>
        `;
      });
    }

    window.onload = () => {
      renderPlans(littlePlans, 'little-plans', 'little');
      renderPlans(hugePlans, 'huge-plans', 'huge');

      const ctx = document.getElementById('profitChart').getContext('2d');
      const data = {
        labels: Array.from({length: 50}, (_, i) => i + 1),
        datasets: [{
          label: 'Investor Profit %',
          data: Array.from({length: 50}, () => Math.floor(Math.random() * 12) + 80),
          borderColor: '#38bdf8',
          backgroundColor: 'rgba(56,189,248,0.2)',
          fill: true,
          tension: 0.4,
        }]
      };

      const config = {
        type: 'line',
        data: data,
        options: {
          responsive: true,
          animation: { duration: 0 },
          plugins: { legend: { labels: { color: '#fff' } } },
          scales: {
            x: { ticks: { color: '#ccc' } },
            y: { min: 75, max: 95, ticks: { color: '#ccc', stepSize: 2 } }
          }
        },
      };

      const profitChart = new Chart(ctx, config);
      setInterval(() => {
        profitChart.data.datasets[0].data.shift();
        profitChart.data.datasets[0].data.push(Math.floor(Math.random() * 12) + 80);
        profitChart.update();
      }, 1000);
    };
  </script>
</body>
</html>